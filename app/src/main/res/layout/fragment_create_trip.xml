<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Headline for Add Trip -->
        <TextView
            android:id="@+id/add_trip_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_trip"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/trip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/trip_name"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/trip_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/trip_start_date"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/trip_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/trip_end_date"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/trip_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/trip_description"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/trip_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/trip_user_id"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/trip_images_urls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/trip_images_urls"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/save_trip_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_trip"
            android:layout_marginTop="16dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="16dp" />
    </LinearLayout>
</ScrollView>
