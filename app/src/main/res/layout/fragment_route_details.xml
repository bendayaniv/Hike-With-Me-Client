<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/route_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Route Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/route_description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/route_length_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Length"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/route_difficulty_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/save_route_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/back_route_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>
